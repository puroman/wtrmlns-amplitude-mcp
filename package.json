{
  "name": "wtrmlns-amplitude-mcp",
  "version": "0.1.0",
  "description": "Model Context Protocol server for Amplitude Analytics",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "amplitude-mcp": "./bin/cli.js"
  },
